<Page
    x:Class="Findler.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Findler"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Findler.Models"
    mc:Ignorable="d">

    <Grid Padding="10" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2">
                <TextBlock Text="Findler" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock HorizontalAlignment="Center" Text="Cursos"
                            Style="{StaticResource HeaderTextBlockStyle}"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical">
                <TextBlock Text="Populares" Style="{StaticResource TitleTextBlockStyle}"/>
                <FlipView ItemsSource="{x:Bind Data}" Height="100px" Margin="0 0 20 0" Padding="10">
                    <FlipView.ItemTemplate>
                        <DataTemplate x:DataType="models:Curso">
                            <StackPanel>
                                <TextBlock Text="{Binding Nombre}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Nivel}"/>
                                <TextBlock Text="{Binding Valor}"/>
                            </StackPanel>
                        </DataTemplate>
                    </FlipView.ItemTemplate>
                </FlipView>
            </StackPanel>
            <!--<StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal"
                        VerticalAlignment="Bottom">
                <Ellipse Fill="DarkViolet" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
                <Ellipse Fill="DarkViolet" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
                <Ellipse Fill="DarkViolet" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
                <Ellipse Fill="DarkViolet" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
            </StackPanel>-->
            <TextBlock Text="Gratuitos" Style="{StaticResource TitleTextBlockStyle}"
                            VerticalAlignment="Top" Grid.Row="2"/>
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal"
                        VerticalAlignment="Bottom">
                <Ellipse Fill="DarkCyan" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
                <Ellipse Fill="DarkCyan" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
                <Ellipse Fill="DarkCyan" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
                <Ellipse Fill="DarkCyan" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
            </StackPanel>
            <TextBlock Text="Nuevos" Style="{StaticResource TitleTextBlockStyle}"
                            VerticalAlignment="Top" Grid.Row="3"/>
            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal"
                        VerticalAlignment="Bottom">
                <Ellipse Fill="Chocolate" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
                <Ellipse Fill="Chocolate" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
                <Ellipse Fill="Chocolate" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
                <Ellipse Fill="Chocolate" Height="100px" Width="100px" HorizontalAlignment="Left"
                            Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>